{
  "manifest_version": 2,
  "name": "emoji-sub",
  "description": "Replaces words with emojis",
  "homepage_url": "https://github.com/dhowe/emoji-sub",
  "version": "0.1",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-off.png",
      "32": "icons/icon-off.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./sub-emoji.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "webNavigation"
  ]
}